@model IEnumerable<AtomBlog.Domain.AtomDomainModel.Post>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Blog
        </th>
        <th>
            Title
        </th>
        <th>
            Content
        </th>
        <th>
            LastUpdated
        </th>
        <th>
            PublishDate
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@(item.Blog == null ? "None" : item.Blog.Title)
        </td>
        <td>
			@item.Title
        </td>
        <td>
			@item.Content
        </td>
        <td>
			@item.LastUpdated
        </td>
        <td>
			@item.PublishDate
        </td>
    </tr>
}

</table>


