@model IEnumerable<AtomBlog.Domain.AtomDomainModel.Blog>

@{
	ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
	@Html.ActionLink("Create New", "Create")
</p>
<table>
	<tr>
		<th></th>
		<th>
			Title
		</th>
		<th>
			Description
		</th>
		<th>
			PublishDate
		</th>
		<th>
			LastUpdatedTime
		</th>
		<th>
			Posts
		</th>
	</tr>

@foreach (var item in Model) {
	<tr>
		<td>
			@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
			@Html.ActionLink("Details", "Details", new { id=item.Id }) |
			@Html.ActionLink("Delete", "Delete", new { id=item.Id })
		</td>
		<td>
			@item.Title
		</td>
		<td>
			@item.Description
		</td>
		<td>
			@item.PublishDate
		</td>
		<td>
			@item.LastUpdatedTime
		</td>
		<td>
			@Html.ActionLink("posts", "Index", "Posts" , new { blogId =item.Id }, null)
			
		</td>
	</tr>
}

</table>


