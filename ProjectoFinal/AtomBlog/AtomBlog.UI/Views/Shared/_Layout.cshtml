<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>    
    <link href="@Url.Content("~/Content/bootstrap-1.3.0.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrapmvc.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="topbar">
        <div class="fill">
            <div class="container">
                <h3><a href="#">Blogs Site Application</a></h3>
                <ul class="nav">
                    <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Blogs", "Index", "Blogs")</li>
                </ul>
                <ul class="nav secondary-nav">
                    <li>@Html.Partial("_LogOnPartial")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <footer>
            <p>&copy; Vilhena 2011</p>
        </footer>
    </div> <!-- /container --> 
</body>
</html>
